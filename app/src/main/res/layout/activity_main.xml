<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
            android:text="HIGH SCORE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/highScoreButton" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/resumeButton" app:layout_constraintEnd_toEndOf="@+id/resumeButton"
            app:layout_constraintStart_toStartOf="@+id/resumeButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" android:textColor="#254479"/>
    <Button
            android:text="@string/action_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/settingsButton"
            app:layout_constraintEnd_toEndOf="@+id/resumeButton"
            app:layout_constraintStart_toStartOf="@+id/resumeButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" android:textColor="#254479"
            app:layout_constraintHorizontal_bias="0.576" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/highScoreButton"/>
    <Button
            android:text="NEW GAME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/newGameButton" app:layout_constraintStart_toStartOf="@+id/titleText"
            app:layout_constraintEnd_toEndOf="@+id/titleText" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/titleText"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:textColor="#254479"/>
    <TextView
            android:text="UwU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titleText" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
    />
    <Button
            android:text="@string/resume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resumeButton" app:layout_constraintStart_toStartOf="@+id/titleText"
            app:layout_constraintEnd_toEndOf="@+id/titleText"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:textColor="#254479"
            app:layout_constraintHorizontal_bias="0.444" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/newGameButton"/>
</androidx.constraintlayout.widget.ConstraintLayout>